#include <stdio.h>
#include <stdbool.h>

bool isPowerOfTwo(unsigned int n) {
    return (n != 0) && ((n & (n - 1)) == 0);
}

int main() {
    unsigned int num;

    printf("Enter a positive integer: ");
    scanf("%u", &num);

    if (isPowerOfTwo(num)) {
        printf("%u is a power of two.\n", num);
    } else {
        printf("%u is NOT a power of two.\n", num);
    }

    return 0;
}
