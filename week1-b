#include <stdio.h>

int main() {
    int rows, i, j;

    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    for (i = 1; i <= rows; i++) {           // Loop for each row
        for (j = 1; j <= i; j++) {          // Loop to print stars in each row
            printf("*");
        }
        printf("\n");                        // Move to next line after each row
    }

    return 0;
}
