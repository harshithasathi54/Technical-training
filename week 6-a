#include <stdio.h>

// Function declaration
float findAverage(int arr[], int n);

int main() {
    int arr[100], n, i;
    float avg;

    // Input size of array
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter elements of the array:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Function call
    avg = findAverage(arr, n);

    // Display average
    printf("\nAverage of array elements = %.2f\n", avg);

    return 0;
}

// Function definition
float findAverage(int arr[], int n) {
    int i, sum = 0;

    for (i = 0; i < n; i++) {
        sum += arr[i];
    }

    return (float)sum / n;  // Return average
}
